@model IEnumerable<MIS4200Team6.Models.Registrar>

@{
    ViewBag.Title = "Empolyee Directory";
}

<h2>Empolyee Directory</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="col-md-6">
    @using (Html.BeginForm("Index", "Registrars", FormMethod.Get))
    {
        <p>
            Search by employee name (first, last, both) <span class="glyphicon glypchicon-search"></span>
            @Html.TextBox("searchString")
            <input type="submit" value="Search" />
        </p>
    }
</div>
<table class="table">
    <tr>
        

        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Birthday)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OperatingGroup)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OGroup)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Centric)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.hireDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EmailAddress)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Birthday)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.OperatingGroup)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.OGroup)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Centric)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.hireDate)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
    </td>
</tr>
}

</table>
